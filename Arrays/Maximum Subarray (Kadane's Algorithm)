class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int maxsum=INT_MIN;
        int n = nums.size();
        int sum =0;
        for(int i=0;i<n;i++){
            if(nums[i]+sum>maxsum){
                maxsum = nums[i] +  sum; 
            }
            if(nums[i]+sum <0){
                sum=0;
            }
            else{
                sum= nums[i]+sum;
            }
        }
        return maxsum;
    }
};
